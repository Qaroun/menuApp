<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha="0.7" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Bienvenu chez achraf qaroun"
        android:textSize="40dp"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:paddingTop="13dp"
        android:fontFamily="@font/italiano"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="L'application de location de voiture offre une solution pratique pour les voyageurs cherchant à louer un véhicule. Avec un grand choix de voitures et des tarifs compétitifs, la réservation est facile et rapide.."
        android:textSize="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/italiano"
        android:textColor="@color/black"
        android:lineSpacingExtra="8dp" />




</FrameLayout>